public static Integer findLargest(List<Integer> nums) {
    if (nums == null || nums.isEmpty()) {
        return null;  // Handle empty or null lists
    }
    
    Integer largestInteger = nums.get(0);  // Start with the first element
    
    for (Integer i = 1; i < nums.size(); i++) {  // Start from the second element
        if (nums.get(i) > largestInteger) {
            largestInteger = nums.get(i);  // Update largest if current number is bigger
        }
    }

    return largestInteger;
}
